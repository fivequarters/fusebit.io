#modal__signUp.modal
    button.modal__btn--close
        span 

    .modal__content
        div(class="pipedriveWebForms" data-pd-webforms=waitlistFormURL)
            

    script.
        window.addEventListener('load', () => {
            const modalCloseBtns = document.querySelectorAll('.modal__btn--close')
            modalCloseBtns.forEach(btnClose => {
                btnClose.addEventListener('click', () => {
                    const modal = btnClose.parentNode;

                    modal.style.display = 'none';
                })
            })

            const pipedriveWebForms = document.querySelector('.pipedriveWebForms');
            if(pipedriveWebForms) {
                const _script = document.createElement('script')
                _script.setAttribute('src', 'https://webforms.pipedrive.com/f/loader');
                _script.setAttribute('lenny', '123');
                
                pipedriveWebForms.appendChild(_script);
            }
        })