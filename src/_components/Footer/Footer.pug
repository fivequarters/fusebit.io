mixin footerLink(link, linkText, badge, trackedWithSegment, eventName, objectLocation)
    li.footer__link 
        a(href=link, data-object-location=objectLocation, data-event-name=eventName class=trackedWithSegment ? 'track-with-segment' : '')=linkText
        if(badge)
            .footer__link--badge
                span= badge
footer.footer
    img(class="footer__top-mark" src="/assets/images/footer__bg/bg--top.png" alt="Footer Top Mark") 
    img(class="footer__bottom-mark" src="/assets/images/footer__bg/bg--bottom.png" alt="Footer Bottom Mark") 
    .footer__container 
        .footer__wrapper.footer__wrapper--head
            .footer__logo 
                a(href="/") 
                    include ../Logo/Logo

            ul.footer__links 
                li.footer__links--title  Popular Integrations

                +footerLink('/integrations/i=google', 'Google', 0, true, 'Google Integration Link Clicked', 'Footer')
                +footerLink('/integrations/i=discord', 'Discord', 0, true, 'Discord Integration Link Clicked', 'Footer')
                +footerLink('/integrations/i=githubapp', 'GitHub', 0, true, 'GitHub Integration Link Clicked', 'Footer')
                +footerLink('/integrations/i=asana', 'Asana', 0, true, 'Asana Integration Link Clicked', 'Footer')
                +footerLink('/integrations/i=linkedin', 'LinkedIn', 0, true, 'LinkedIn Integration Link Clicked', 'Footer')
                +footerLink('/integrations/i=salesforce', 'Salesforce', 0, true, 'Salesforce Integration Link Clicked', 'Footer')
                +footerLink('/integrations/', '...More', 0, true, 'More Integrations Link Clicked', 'Footer')

            ul.footer__links 
                li.footer__links--title  Developers
                
                +footerLink('https://developer.fusebit.io/docs', 'Documentation', 0, true, 'Developer Docs Link Clicked', 'Footer')
                +footerLink('https://developer.fusebit.io/reference', 'API Reference', 0, true, 'Developer API Reference Link Clicked', 'Footer')
                +footerLink('/blog/', 'Integration Stories', 0)
                
            ul.footer__links 
                li.footer__links--title  Company
   
                +footerLink('/about/', 'About Us', 0)
                +footerLink('/pricing/', 'Pricing', 0)
                +footerLink('/support/', 'Support', 0)
                +footerLink('/careers/', 'Careers', 0)
                +footerLink('/contact/', 'Contact', 0)
                +footerLink('/legal/', 'Legal', 0)
                +footerLink('/privacy/', 'Privacy Policy', 0)
                +footerLink('/terms/', 'Terms of Use', 0)

            .footer__social 
                include ../SocialMedia/SocialMedia

        .footer__wrapper.footer__wrapper--content 
            - const currentYear = new Date().getFullYear();
            p Copyright 2019-#{currentYear} Fusebit

    .footer__bg 
