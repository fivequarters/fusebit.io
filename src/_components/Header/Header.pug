-
    const headerLinks = [
        {
            text: 'Integrations',
            link: '#integrations'
        },
        {
            text: 'Docs',
            link: '#docs'
        },
        {
            text: 'Blog',
            link: '#blog'
        }

    ]

header.header 
    .header__container 
        .header__logo 
            a(href="/") 
                include ../Logo/Logo

        .header__menu 
            ul 
                each link in headerLinks
                    li
                        a(href=link.link)=link.text

        .header__links 
            ul 
                li 
                    a.header__links--signIn(href="#") Login
                li 
                    a.header__links--signUp(href="#") Sign up

        .header__menuMobile--btn 
            span.top 
            span.center1
            span.center2
            span.bottom

    .header__menuMobile

        .menuMobile__links
            ul 
                each link in headerLinks
                    li
                        a(href=link.link)=link.text

                li 
                    a.header__links--signUp(href="#") Sign up

        .menuMobile__social 
            include ../SocialMedia/SocialMedia


        
        

    script.
        function toggleClasses(target, addClass, removeClass) {
            target.classList.remove(removeClass);
            target.classList.add(addClass);
        }

        window.addEventListener('load', () => {
            let lastScroll = window.pageYOffset;

            window.addEventListener('scroll', () => {
                const currentScrollPos = window.pageYOffset;
                const header = document.querySelector('.header');

                if (currentScrollPos < 150) {
                    header.classList.remove('header--compact');
                } else if (lastScroll > currentScrollPos) {
                    toggleClasses(header, 'header--compact', 'header--hidden');
                } else {
                    toggleClasses(header, 'header--hidden', 'header--compact');
                }
                lastScroll = currentScrollPos;
            });

            const header = document.querySelector('.header');
            const headerSignUp = header.querySelectorAll('.header__links--signUp');
            const menuMobileBtn = document.querySelector('.header__menuMobile--btn');

            menuMobileBtn.addEventListener('click', () => {
                header.classList.toggle('header__menuMobile--open');
                document.querySelector('html').classList.toggle('hidden');
            });

            headerSignUp.forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.preventDefault();
                    
                    let modal = document.querySelector('#modal__signUp')
                    modal.style.display = 'block';
                })
            })
        });