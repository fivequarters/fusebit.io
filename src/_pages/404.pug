extends ../_layouts/default.pug

block content
    .page-not-found
        .box
            div(class='box__ghost')
                .symbol
                .symbol
                .symbol
                .symbol
                .symbol
                .symbol
                div(class='box__ghost-container')
                    div(class='box__ghost-eyes')
                        div(class='box__eye-left')
                        div(class='box__eye-right')
                    div(class='box__ghost-bottom')
                        div
                        div
                        div
                        div
                        div
                div(class='box__ghost-shadow')
            div(class='box__description')
                div(class='box__description-container')
                    div(class='box__description-title') Whoops!
                    div(class='box__description-text') It seems like we couldn't find the page you were looking for
                a(href='/' target='_blank' class='box__button') Go back
    script. 
        let pageX = window.innerWidth, pageY = window.innerHeight, mouseY=0, mouseX=0;
        window.addEventListener('mousemove', function(event) {
            mouseY = event.pageY, yAxis = (pageY/2-mouseY)/pageY*300, mouseX = event.pageX / -pageX, xAxis = -mouseX * 100 - 100;
            document.querySelector('.box__ghost-eyes').style.transform = 'translate('+ xAxis +'%,-'+ yAxis +'%)';
        });